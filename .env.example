# Server
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
PUBLIC_BASE_URL=http://localhost:3000
CALLBACK_PATH=/api/callback
TRUST_PROXY=true

# Asgardeo resume endpoint template. Must contain {flowId}. Optionally include {tenant}.
ASGARDEO_RESUME_URL_TEMPLATE=https://api.asgardeo.io/t/{tenant}/logincontext?flowId={flowId}

# Inbound request auth from Asgardeo: none | basic | bearer | api-key
ASGARDEO_AUTH_MODE=none
ASGARDEO_BASIC_USERNAME=
ASGARDEO_BASIC_PASSWORD=
ASGARDEO_BEARER_TOKEN=
ASGARDEO_API_KEY_HEADER=x-asgardeo-api-key
ASGARDEO_API_KEY_VALUE=

# Authsignal Server API base URL.
# Use the region endpoint that matches your account (US/EU/UK/AU): api.authsignal.com, eu.api.authsignal.com, uk.api.authsignal.com, au.api.authsignal.com
AUTHSIGNAL_API_URL=https://api.authsignal.com
AUTHSIGNAL_SECRET=YOUR_AUTHSIGNAL_SECRET

# Flow persistence: memory | redis
STORE_DRIVER=memory
FLOW_TTL_SECONDS=900
REDIS_URL=redis://localhost:6379
